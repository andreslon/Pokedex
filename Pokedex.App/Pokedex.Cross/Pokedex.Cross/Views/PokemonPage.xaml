<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding name}"
             x:Class="Pokedex.Cross.Views.PokemonPage">
  <Grid>

    <StackLayout Padding="20">

      <Image Source="{Binding image}" WidthRequest="250" HeightRequest="250" ></Image>
      <Label Text="{Binding name}"  FontAttributes="Bold" FontSize="20" HorizontalOptions="Center"/>
      <Label   Text="{Binding species}"  HorizontalOptions="Center"/>

    </StackLayout>

  </Grid>

</ContentPage>